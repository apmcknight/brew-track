@page
@model brew_track.Pages.Order.IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <div class="text-left">
        <div class="jumbotron">
            <h1>Good, Evening!</h1>
        </div>

        <table class="table">
            <h1>Current Orders</h1>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Orders[0].FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Orders[0].Items)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Orders[0].TableNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Orders[0].CarType)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Orders)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Items)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TableNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CarType)
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                            <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.ID">Details</a>

                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                                DELETE
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Confirm Removal</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <h1>
                                                Are you sure you want to delete this order?
                                            </h1>
                                            <p>
                                                You won't be able to undo this action.
                                            </p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                            <a class="btn btn-danger" asp-page="./Order/Delete" asp-route-id="@item.ID">Delete</a>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--<a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>-->
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
