@page
@model brew_track.Pages.Order.DeleteModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

<h1>Please Confirm you want to Remove this order.</h1>

<div>
    <h4>Order to Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Orders.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Orders.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Orders.Items)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Orders.Items)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Orders.TableNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Orders.TableNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Orders.CarType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Orders.CarType)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Orders.ID" />
        <input type="submit" value="Confirm" class="btn btn-danger" />
        <a class="btn btn-primary" asp-page="/">Cancel</a>
    </form>
</div>
</body>
</html>
