@page
@model brew_track.Pages.Order.EditModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Orders</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Orders.ID" />
            <div class="form-group">
                <label asp-for="Orders.FirstName" class="control-label"></label>
                <input asp-for="Orders.FirstName" class="form-control" />
                <span asp-validation-for="Orders.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.Status" class="control-label"></label>
                <select asp-for="Orders.Status" class="form-control" id="status-selector">
                    <option>New Order</option>
                    <option>Preparing</option>
                    <option>Cooking in Progress</option>
                    <option>Finished, Ready to Serve</option>
                    <option>Served to Table</option>
                </select>
                <span asp-validation-for="Orders.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.Items" class="control-label"></label>
                <input asp-for="Orders.Items" class="form-control" />
                <span asp-validation-for="Orders.Items" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.TableNumber" class="control-label"></label>
                <input asp-for="Orders.TableNumber" class="form-control" />
                <span asp-validation-for="Orders.TableNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.CarType" class="control-label"></label>
                <input asp-for="Orders.CarType" class="form-control" />
                <span asp-validation-for="Orders.CarType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
